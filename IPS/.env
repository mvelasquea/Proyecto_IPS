# Configuración de desarrollo para el Sistema de Análisis de Combustible
# Copiar este archivo como .env y modificar los valores según sea necesario

# Configuración de Flask
FLASK_CONFIG=development
FLASK_DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production

# Configuración de archivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configuración de base de datos (futuro)
DATABASE_URL=sqlite:///app.db

# Configuración de análisis
MIN_RECORDS_FOR_ANOMALY_DETECTION=10
ANOMALY_CONTAMINATION_RATE=0.1

# Configuración de PDF
PDF_FONT_SIZE=10
PDF_MAX_TABLE_ROWS=50

# Configuración de desarrollo local
HOST=0.0.0.0
PORT=5000

# Configuración de pruebas
TESTING=False
